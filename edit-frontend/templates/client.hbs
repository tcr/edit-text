<!DOCTYPE html>

<html>
<head>

<link rel="icon" type="image/png" href="/favicon.png">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
@font-face {
  font-family: 'TeX Gyre Heros';
  font-weight: normal;
  src: url('/$/static/texgyreheros-regular.otf') format('opentype');
}

@font-face {
  font-family: 'TeX Gyre Heros';
  font-weight: bold;
  src: url('/$/static/texgyreheros-bold.otf') format('opentype');
}
</style>

<style>{{{stylesheet}}}</style>

<title>{{id}} | {{title}}</title>
</head>

<body class="theme-column">
  <div id="content">
    <div id="root-layout">
      <div id="toolbar">
        <a href="/" id="logo" class="{{release_mode}}">{{title}}</a>
        <div id="native-buttons"></div>
        <div id="local-buttons"></div>
      </div>
      
      <div id="edit-layout">
        <div id="edit-outer">
          <div id="edit-page">
            <div class="edit-text" tabIndex="0">{{{body}}}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

<script>
this.CONFIG = {};
</script>
<script src="/$/edit.js"></script>
<script>
if (!window.DEBUG) {
  console.error('Could not determine if JavaScript bundle ran.');
}
</script>
